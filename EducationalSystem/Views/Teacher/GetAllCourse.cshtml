@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@using EducationalSystem.Entities;
@model List<Course>

<div class="container my-5 col-lg-6">
    <h1>All Courses</h1>
    <ul class="list-group">
        @foreach(var course in Model)
        {
             <li class="list-group-item d-flex justify-content-between align-items-center mb-2">
             @course.Name
              <a asp-controller="Teacher" asp-action="CourseDetails" asp-route-id="@course.Id"><span class="badge bg-primary rounded-pill">@course.StudetnsWhoRegister.Count</span></a>
             </li>
        }
    </ul>
</div>