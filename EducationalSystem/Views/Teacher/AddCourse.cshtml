@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@using EducationalSystem.Entities;
@model CourseDTO

<body class="bg-info bg-opacity-50">

    <div class="container bg-light col-lg-4 border border-4 rounded mt-5">
        <h2 class="text-center py-2">Add Course</h2>
                <form asp-controller="Teacher" asp-action="SaveCourse" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Course Name:</label>
                        <input type="text" class="form-control" asp-for="Name" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label">Start Date Time:</label>
                        <input type="datetime-local" asp-for="StartDate" class="form-control" requried>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Capacity" class="form-label">Capacity:</label>
                        <input type="number" class="form-control" asp-for="Capacity" required>
                    </div>

                    <div class="d-grid gap-3 my-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
     </div>

</body>