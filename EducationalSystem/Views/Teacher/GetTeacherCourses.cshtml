@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@using EducationalSystem.Entities;
@model List<Course>

<body class="bg-info bg-opacity-50">

    <div class="container my-5 bg-light border border-4  rounded">
        <h1 class="my-4">@ViewBag.TeacherName  Courses:</h1>
        <table class="table table-bordered table-hover table-striped table-responsive">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Course Name</th>
                    <th scope="col">Teachers Name</th>
                    <th scope="col">Capacity</th>
                    @* <th scope="col">Regsiter Students</th> *@
                    <th scope="col">Start Date</th>
                    <th scope="col">Operation</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var course in Model)
                {
                    <tr>
                        <th scope="row">@course.Id</th>
                        <td>@course.Name</td>
                        <td>@ViewBag.TeacherName</td>
                        <td>@course.Capacity</td>
                        @* <td>@course.StudetnsWhoRegister.Count</td> *@
                        <td>@course.StartDate</td>
                        <td>
                            <a class="btn btn-primary" asp-action="CourseDetails" asp-controller="Teacher" asp-route-id="@course.Id">More Details</a>
                            <a class="btn btn-danger mx-2" asp-action="RemoveCourse" asp-controller="Teacher" asp-route-id="@course.Id">Remove Course</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>