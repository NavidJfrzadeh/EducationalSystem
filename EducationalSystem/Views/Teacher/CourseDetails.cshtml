@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@using EducationalSystem.Entities
@model Course


<div class="container mt-5">
    <h2>@Model.Name Students</h2>
<table class="table table-hover table-borderd table-responsive table-striped">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var student in Model.StudetnsWhoRegister)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td></td>
                </tr>
            }
    </tbody>
</table>

</div>